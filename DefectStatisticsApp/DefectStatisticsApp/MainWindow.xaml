<Window x:Class="DefectStatisticsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DefectStatisticsApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1200">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="16"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="10 0 10 0"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Margin" Value="10 10 10 0"/>
        </Style>
        
    </Window.Resources>
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.15*"/>
                <ColumnDefinition Width="0.85*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.1*"/>
                <RowDefinition Height="0.8*"/>
                <RowDefinition Height="0.1*"/>
            </Grid.RowDefinitions>
            
            <StackPanel Grid.Column="0" Grid.RowSpan="3"
                        x:Name="myPanel"
                        Background="BlanchedAlmond">
                <Label Content="ei"/>
                <TextBox x:Name="txbEI" 
                         Text="{Binding Path=TxbEI}"/>
                
                <Label Content="es"/>
                <TextBox x:Name="txbES" 
                         Text="{Binding Path=TxbES}"/>
                
                <Label Content="sigma"/>
                <TextBox x:Name="txbSigma" 
                         Text="{Binding Path=TxbSigma}"/>
                
                <Label Content="Мат. ожидание"/>
                <TextBox x:Name="txbXavg" 
                         Text="{Binding Path=TxbXAvg}"/>

                <TextBlock Margin="10 10 10 0"
                           Text="Сдвиг центра координат по осям" 
                           Height="40"
                           
                           />
                <Label Content="X"/>
                <TextBox x:Name="txbOffsetX"
                         Text="{Binding Path=TxbOffsetX}"/>
                
                <Label Content="Y"/>
                <TextBox x:Name="txbOffsetY"
                         Text="{Binding Path=TxbOffsetY}"/>

            </StackPanel>

            <Rectangle Grid.Column="2" Grid.Row="0" 
                       Fill="PaleTurquoise">

            </Rectangle>

            <Canvas x:Name="graphCanvas" 
                    Grid.Column="1" Grid.Row="1"
                    Panel.ZIndex="-1"
                    Background="AliceBlue"/>
            
            <Rectangle Grid.Column="2" Grid.Row="2" 
                       Fill="LightGray">
                
            </Rectangle>
            <Label Grid.Column="1" Grid.Row="2"
                   x:Name="lbGraphStatus"
                   Content="Статус графика"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"/>



        </Grid>
    </Grid>
</Window>
